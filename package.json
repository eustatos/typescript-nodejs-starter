    "@types/node": "^8.5.5",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "standard-version": "^8.0.1",
