{
  "name": "typescript-nodejs-server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "eustatos <astashkinav@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "nyc mocha -r ts-node/register src/**/*.spec.ts",
    "release": "standard-version",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc"
  },
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.0",
    "@types/mocha": "^2.2.45",
    "@types/node": "^8.5.5",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "standard-version": "^4.3.0",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.16.2"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/!(*.spec.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "./coverage"
  }
}
